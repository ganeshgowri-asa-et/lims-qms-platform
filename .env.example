# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/lims_qms_db

# Application Settings
APP_NAME="LIMS-QMS Platform"
APP_VERSION="1.0.0"
DEBUG=True
SECRET_KEY=your-secret-key-change-this-in-production

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-password

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760

# Calibration Alert Days
CALIBRATION_ALERT_DAYS=30,15,7

# Organization Details
ORG_NAME="Solar PV Testing Laboratory"
ORG_ADDRESS="Your Address"
ORG_LOGO_PATH=./assets/logo.png

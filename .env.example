# Database Configuration
POSTGRES_USER=lims_user
POSTGRES_PASSWORD=lims_password
POSTGRES_DB=lims_qms_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://lims_user:lims_password@localhost:5432/lims_qms_db

# Application Configuration
APP_NAME="LIMS-QMS Platform"
APP_VERSION=0.1.0
DEBUG=True
ENVIRONMENT=development

# Security
SECRET_KEY=your-secret-key-change-in-production-min-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Backend API
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
API_BASE_URL=http://localhost:8000

# Frontend
FRONTEND_HOST=0.0.0.0
FRONTEND_PORT=8501

# Redis (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:8501","http://localhost:3000"]

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@lims-qms.local

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# PgAdmin (Optional)
PGADMIN_EMAIL=admin@lims-qms.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# AI/ML Configuration (Optional)
OPENAI_API_KEY=your-openai-api-key
MODEL_NAME=gpt-4

# Laboratory Configuration
LAB_NAME=Solar PV Testing Laboratory
LAB_ADDRESS=Your Lab Address
LAB_LICENSE_NUMBER=LAB-2025-001
ISO_ACCREDITATION=ISO/IEC 17025:2017

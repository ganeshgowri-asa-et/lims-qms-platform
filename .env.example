# Environment Configuration Template
# Copy this file to .env and update with your values

# Environment
ENVIRONMENT=development  # development, staging, production

# Application
APP_NAME="LIMS-QMS Platform"
APP_VERSION="1.0.0"
DEBUG=true
API_PREFIX=/api/v1

# Database
DATABASE_URL=postgresql://lims_user:lims_password@localhost:5432/lims_qms_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis (for caching and Celery)
REDIS_URL=redis://localhost:6379/0

# JWT Authentication
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8501
CORS_ALLOW_CREDENTIALS=true

# File Storage
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE_MB=100
ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.xls,.xlsx,.png,.jpg,.jpeg

# Email/SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@solarlims.com
SMTP_FROM_NAME="LIMS-QMS Platform"

# AI Models
AI_MODELS_ENABLED=true
AI_MODELS_PATH=/app/ai_models/saved_models
AI_PREDICTION_CONFIDENCE_THRESHOLD=75
AI_RETRAIN_INTERVAL_DAYS=30

# Alerts & Notifications
CALIBRATION_ALERT_DAYS=30,15,7
TRAINING_ALERT_DAYS=30,15,7
ENABLE_EMAIL_ALERTS=true
ENABLE_DASHBOARD_ALERTS=true

# Backup
BACKUP_ENABLED=true
BACKUP_PATH=/app/backups
BACKUP_RETENTION_DAYS=90
BACKUP_SCHEDULE_CRON=0 2 * * *

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Company Information
COMPANY_NAME="Solar PV Testing Laboratory"
ISO17025_ACCREDITATION=NABL-TC-XXXX
ISO9001_CERTIFICATION=ISO-9001-XXXX
COMPANY_ADDRESS="Your Laboratory Address"
COMPANY_PHONE="+91-XXXXXXXXXX"
COMPANY_EMAIL=info@solarlims.com
COMPANY_WEBSITE=https://www.solarlims.com

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=/app/logs/app.log
LOG_ROTATION=500 MB
LOG_RETENTION=30 days
